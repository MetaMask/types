{
  "name": "@metamask/types",
  "version": "1.1.0",
  "description": "A collection of TypeScrupt types that are used in MetaMask projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/types.git"
  },
  "types": "./src/index.d.ts",
  "files": [
    "src/"
  ],
  "scripts": {
    "setup": "yarn install && yarn allow-scripts",
    "test": "tsd",
    "prepublishOnly": "yarn lint && yarn test",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!CHANGELOG.md' '**/*.yml' --ignore-path .gitignore",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "build": "tsc --noEmit --project .",
    "buildDocs": "typedoc"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^1.0.5",
    "@metamask/auto-changelog": "^2.3.0",
    "@metamask/eslint-config": "^7.0.1",
    "@metamask/eslint-config-typescript": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "^2.2.11",
    "rimraf": "^3.0.2",
    "tsd": "^0.17.0",
    "typedoc": "^0.21.2",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false
    }
  }
}
